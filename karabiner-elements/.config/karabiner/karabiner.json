{
    "profiles": [
        {
            "complex_modifications": {
                "parameters": { "basic.simultaneous_threshold_milliseconds": 250 },
                "rules": [
                    {
                        "description": "CTRL/CMD: swap left control/command keys for VSCode and iTerm2",
                        "manipulators": [
                            {
                                "conditions": [
                                    {
                                        "bundle_identifiers": [
                                            "com\\.microsoft\\.VSCode",
                                            "com\\.googlecode\\.iterm2",
                                            "com\\.neovide\\.neovide"
                                        ],
                                        "type": "frontmost_application_if"
                                    }
                                ],
                                "from": { "key_code": "left_command" },
                                "to": { "key_code": "left_control" },
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "ViArrowKeys: Change Command + h/j/k/l to Arrows",
                        "manipulators": [
                            {
                                "conditions": [
                                    {
                                        "bundle_identifiers": [
                                            "^com\\.googlecode\\.iterm2"
                                        ],
                                        "type": "frontmost_application_unless"
                                    }
                                ],
                                "from": {
                                    "key_code": "h",
                                    "modifiers": { "mandatory": ["command"] }
                                },
                                "to": [{ "key_code": "left_arrow" }],
                                "type": "basic"
                            },
                            {
                                "conditions": [
                                    {
                                        "bundle_identifiers": [
                                            "^com\\.googlecode\\.iterm2"
                                        ],
                                        "type": "frontmost_application_unless"
                                    }
                                ],
                                "from": {
                                    "key_code": "j",
                                    "modifiers": { "mandatory": ["command"] }
                                },
                                "to": [{ "key_code": "down_arrow" }],
                                "type": "basic"
                            },
                            {
                                "conditions": [
                                    {
                                        "bundle_identifiers": [
                                            "^com\\.googlecode\\.iterm2"
                                        ],
                                        "type": "frontmost_application_unless"
                                    }
                                ],
                                "from": {
                                    "key_code": "k",
                                    "modifiers": { "mandatory": ["command"] }
                                },
                                "to": [{ "key_code": "up_arrow" }],
                                "type": "basic"
                            },
                            {
                                "conditions": [
                                    {
                                        "bundle_identifiers": [
                                            "^com\\.googlecode\\.iterm2"
                                        ],
                                        "type": "frontmost_application_unless"
                                    }
                                ],
                                "from": {
                                    "key_code": "l",
                                    "modifiers": { "mandatory": ["command"] }
                                },
                                "to": [{ "key_code": "right_arrow" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "ViEsc: Map cmd + [ to escape",
                        "manipulators": [
                            {
                                "conditions": [
                                    {
                                        "bundle_identifiers": [
                                            "^com\\.googlecode\\.iterm2"
                                        ],
                                        "type": "frontmost_application_unless"
                                    }
                                ],
                                "from": {
                                    "key_code": "open_bracket",
                                    "modifiers": { "mandatory": ["left_command"] }
                                },
                                "to": [{ "key_code": "escape" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "MediaKeys: Play/Pause",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "spacebar",
                                    "modifiers": { "mandatory": ["command", "option"] }
                                },
                                "to": { "key_code": "play_or_pause" },
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "MediaKeys: Play next track",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "n",
                                    "modifiers": { "mandatory": ["command", "option"] }
                                },
                                "to": { "consumer_key_code": "scan_next_track" },
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "MediaKeys: Play previous track",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "p",
                                    "modifiers": { "mandatory": ["command", "option"] }
                                },
                                "to": { "consumer_key_code": "scan_previous_track" },
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "AppLaunch: Launch VSCode",
                        "manipulators": [
                            {
                                "from": {
                                    "modifiers": { "mandatory": ["option"] },
                                    "simultaneous": [
                                        { "key_code": "w" },
                                        { "key_code": "e" }
                                    ]
                                },
                                "to": [{ "shell_command": "open '/Applications/Visual Studio Code.app'" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "AppLaunch: iTerm",
                        "manipulators": [
                            {
                                "from": {
                                    "modifiers": { "mandatory": ["option"] },
                                    "simultaneous": [
                                        { "key_code": "w" },
                                        { "key_code": "t" }
                                    ]
                                },
                                "to": [{ "shell_command": "open '/Applications/iTerm.app'" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "AppLaunch: Chrome",
                        "manipulators": [
                            {
                                "from": {
                                    "modifiers": { "mandatory": ["option"] },
                                    "simultaneous": [
                                        { "key_code": "w" },
                                        { "key_code": "b" }
                                    ]
                                },
                                "to": [{ "shell_command": "open '/Applications/Google Chrome.app'" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "AppLaunch: Spotify",
                        "manipulators": [
                            {
                                "from": {
                                    "modifiers": { "mandatory": ["option"] },
                                    "simultaneous": [
                                        { "key_code": "w" },
                                        { "key_code": "p" }
                                    ]
                                },
                                "to": [{ "shell_command": "open '/Applications/Spotify.app'" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "MissionCtrl: launch",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "tab",
                                    "modifiers": { "mandatory": ["right_option"] }
                                },
                                "to": { "key_code": "mission_control" },
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "MissionCtrl: app windows",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "tab",
                                    "modifiers": { "mandatory": ["right_command", "right_option"] }
                                },
                                "to": {
                                    "key_code": "down_arrow",
                                    "modifiers": ["control"]
                                },
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Desktop: lock screen",
                        "manipulators": [
                            {
                                "from": {
                                    "modifiers": { "mandatory": ["right_option"] },
                                    "simultaneous": [
                                        { "key_code": "q" },
                                        { "key_code": "l" }
                                    ]
                                },
                                "to": {
                                    "key_code": "q",
                                    "modifiers": ["control", "command"]
                                },
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Flow: show/hide window",
                        "manipulators": [
                            {
                                "from": {
                                    "modifiers": { "mandatory": ["option"] },
                                    "simultaneous": [
                                        { "key_code": "f" },
                                        { "key_code": "s" }
                                    ]
                                },
                                "to": {
                                    "key_code": "h",
                                    "modifiers": ["control", "command", "option"]
                                },
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Flow: start/stop Pomodoro timer",
                        "manipulators": [
                            {
                                "from": {
                                    "modifiers": { "mandatory": ["option"] },
                                    "simultaneous": [
                                        { "key_code": "f" },
                                        { "key_code": "spacebar" }
                                    ]
                                },
                                "to": {
                                    "key_code": "f",
                                    "modifiers": ["control", "command", "option"]
                                },
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Flow: reset Pomodoro counter",
                        "manipulators": [
                            {
                                "from": {
                                    "modifiers": { "mandatory": ["option"] },
                                    "simultaneous": [
                                        { "key_code": "f" },
                                        { "key_code": "d" }
                                    ]
                                },
                                "to": {
                                    "key_code": "r",
                                    "modifiers": ["control", "command", "option"]
                                },
                                "type": "basic"
                            }
                        ]
                    }
                ]
            },
            "fn_function_keys": [
                {
                    "from": { "key_code": "f3" },
                    "to": [{ "key_code": "mission_control" }]
                },
                {
                    "from": { "key_code": "f4" },
                    "to": [{ "key_code": "launchpad" }]
                },
                {
                    "from": { "key_code": "f5" },
                    "to": [{ "key_code": "illumination_decrement" }]
                },
                {
                    "from": { "key_code": "f6" },
                    "to": [{ "key_code": "illumination_increment" }]
                }
            ],
            "name": "Default profile",
            "selected": true,
            "simple_modifications": [
                {
                    "from": { "key_code": "caps_lock" },
                    "to": [{ "key_code": "left_command" }]
                }
            ],
            "virtual_hid_keyboard": {
                "country_code": 0,
                "keyboard_type_v2": "ansi"
            }
        }
    ]
}
