{
  "title": "Mission Control",
  "rules": [
    {
      "description": "MissionCtrl: launch",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "tab",
            "modifiers": {
              "mandatory": [
                "right_option"
              ]
            }
          },
          "to": {
            "key_code": "mission_control"
          }
        }
      ]
    },
    {
      "description": "MissionCtrl: app windows",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "tab",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_option"
              ]
            }
          },
          "to": {
            "modifiers": [
              "control"
            ],
            "key_code": "down_arrow"
          }
        }
      ]
    }
  ]
}
