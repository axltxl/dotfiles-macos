{
  "title": "Launch apps",
  "rules" : [
    {
      "description": "Launch VSCode",
      "manipulators" : [
        {
          "type" : "basic",
          "from" : {
            "simultaneous": [
              {"key_code": "w"},
              {"key_code": "e"}
            ],
            "modifiers": {
              "mandatory": [ "option" ]
            }
          },
          "to": [
            {
              "shell_command": "open '/Applications/Visual Studio Code.app'"
            }
          ]
        }
      ]
    },
    {
      "description": "Launch iTerm",
      "manipulators" : [
        {
          "type" : "basic",
          "from" : {
            "simultaneous": [
              {"key_code": "w"},
              {"key_code": "t"}
            ],
            "modifiers": {
              "mandatory": [ "option" ]
            }
          },
          "to": [
            {
              "shell_command": "open '/Applications/iTerm.app'"
            }
          ]
        }
      ]
    },
    {
      "description": "Launch Chrome",
      "manipulators" : [
        {
          "type" : "basic",
          "from" : {
            "simultaneous": [
              {"key_code": "w"},
              {"key_code": "t"}
            ],
            "modifiers": {
              "mandatory": [ "option" ]
            }
          },
          "to": [
            {
              "shell_command": "open '/Applications/Google Chrome.app'"
            }
          ]
        }
      ]
    }
  ]
}
